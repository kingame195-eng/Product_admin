# Server
NODE_ENV=production
PORT=5000
API_PREFIX=/api/v1

# Database (MongoDB)
# Use MongoDB Atlas for cloud: mongodb+srv://username:password@cluster.mongodb.net/product_admin
# Or local: mongodb://admin:admin123@localhost:27017/product_admin?authSource=admin
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/product_admin

# JWT
JWT_SECRET=your_super_secret_key_here_change_in_production
JWT_REFRESH_SECRET=your_refresh_secret_key

# CORS
CORS_ORIGIN=http://localhost:5173

# File Upload
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# CORS
CORS_ORIGIN=http://localhost:5173

# Redis (Optional)
REDIS_HOST=localhost
REDIS_PORT=6379
