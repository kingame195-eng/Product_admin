# Server
NODE_ENV=development
PORT=5000
API_PREFIX=/api/v1

# Database (MongoDB)
# Try without auth first - if fails, add username:password or authSource=admin
MONGO_URI=mongodb://localhost:27017/product_admin

# JWT
JWT_SECRET=your_super_secret_key_here_change_in_production_12345
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_refresh_secret_key_change_in_production_67890
JWT_REFRESH_EXPIRES_IN=30d

# File Upload
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# CORS
CORS_ORIGIN=http://localhost:5173

# Redis (Optional)
REDIS_HOST=localhost
REDIS_PORT=6379
